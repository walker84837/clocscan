{
	"code_file_extensions": [
		{"extension": "rs", "file_type": "Rust"},
		{"extension": "c", "file_type": "C Source File"},
		{"extension": "cpp", "file_type": "C++ Source File"},
		{"extension": "h", "file_type": "C Header"},
		{"extension": "hpp", "file_type": "C++ Header"}
	],
	"ignore": {
		"folders": ["target", "node_modules"],
		"files": [".gitignore", "LICENSE"]
	},
	"comment_patterns": {
		"single_line": ["//", "#", ";", "--"],
		"multi_line_start": ["/*"],
		"multi_line_end": ["*/"]
	}
}
